        </xs:annotation>
      </xs:element>
      <xs:element name="activityDate" type="tns:ActivityDateType" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Activity Date</xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
