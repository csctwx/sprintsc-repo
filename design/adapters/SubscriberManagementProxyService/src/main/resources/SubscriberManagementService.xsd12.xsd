          <xs:documentation>Memo source</xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="userText" type="tns:MemoTextType" minOccurs="0">
        <xs:annotation>
          <xs:documentation>Memo text</xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
